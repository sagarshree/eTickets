@model IEnumerable<Actor>

@{
   ViewData["Title"] = "Actors";
    Layout = "_Layout";
}

<div class="row" >
    <div class="col-md-8 offset-md-2">
        <table class="table " >
            <thead class="table" style="background-color: #0c748a;">
            <tr class="text-center text-white">
                <th>@Html.DisplayNameFor(model=>model.ProfilePictureURL)</th>
                <th>@Html.DisplayNameFor(model=>model.FullName)</th>
                <th>@Html.DisplayNameFor(model=>model.Bio)</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody class="table-light">

            
            @foreach (var actor in Model!)
            {
                <tr class="text-center" >
                    <td class="align-middle">
                        <img class="rounded-circle" src="@actor.ProfilePictureURL" alt="Profile Picture" style="width: 150px;height: 150px"/>
                    </td>
                    <td class="align-middle">@actor.FullName</td>
                    <td class="align-middle">@actor.Bio</td>
                    <td class="align-middle">
                        <a class="btn btn-outline-primary"  asp-controller="Actors" asp-action="Edit" asp-route-id="@actor.Id" >Edit <i class="bi bi-pencil-square"></i></a>
                        <a class="btn btn-outline-info" asp-controller="Actors" asp-action="Details" asp-route-id="@actor.Id">Details <i class="bi bi-eye"></i></a>
                        <a class="btn btn-outline-danger" asp-controller="Actors" asp-action="Delete" asp-route-id="@actor.Id">Delete <i class="bi bi-trash"></i></a>
                        

                    </td>

                </tr>
            }
            </tbody>
        </table>
    </div>
    
</div>
<div style="position: fixed; right: 25px; bottom: 60px;" class="text-white">
    <a asp-controller="Actors" asp-action="Create" class="btn btn-success"> 
    <i class="bi bi-plus-circle"></i> Add New </a>
</div>
