@model IEnumerable<Cinema>

@{
    ViewData["Title"] = "Cinemas";
    Layout = "_Layout";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead class="table " style="background-color: #0c748a;">
            <tr class="text-center text-light">
                <th>@Html.DisplayNameFor(model=>model.Logo)</th>
                <th>@Html.DisplayNameFor(model=>model.Name)</th>
                <th>@Html.DisplayNameFor(model=>model.Description)</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody class="table-light">

            
            @foreach (var cinema in Model!)
            {
                <tr class="text-center" >
                    <td class="align-middle">
                        <img class="rounded-circle" src="@cinema.Logo" alt="Profile Picture" style="width: 150px;height: 150px"/>
                    </td>
                    <td class="align-middle">@cinema.Name</td>
                    <td class="align-middle">@cinema.Description</td>
                    <td class="align-middle">
                        <a class="btn btn-outline-primary" asp-controller="Cinemas" asp-action="Edit" asp-route-id="@cinema.Id">Edit <i class="bi bi-trash"></i></a>
                        <a class="btn btn-outline-info" asp-controller="Cinemas" asp-action="Details" asp-route-id="@cinema.Id">Details <i class="bi bi-trash"></i></a>
                        <a class="btn btn-outline-danger" asp-controller="Cinemas" asp-action="Delete" asp-route-id="@cinema.Id">Delete <i class="bi bi-trash"></i></a>
                    </td>

                </tr>
            }
            </tbody>
        </table>
    </div>
    
</div>
<div style="position: fixed; right: 25px; bottom: 60px;" class="text-white">
    <a asp-controller="Cinemas" asp-action="Create" class="btn btn-success"> 
        <i class="bi bi-plus-circle"></i> Add New </a>
</div>