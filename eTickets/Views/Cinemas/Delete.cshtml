@model Cinema

@{
    ViewData["Title"] = "Delete Actor";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Add a New Actor</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                

                    <div class="form-group text-center">
                        <img class="rounded-circle" id="ProfilePicturePreview"  style="width: 100px;height: 100px" />
                    </div>
                    <br class="p-1"/>
                    

                                        <div class="form-group">
                                            <label asp-for="Logo" class="control-label"></label>
                                            <input asp-for="Name" class="form-control" readonly />
                        
                                        </div>
                                        <br class="p-1"/>
                                        

                                        <div class="form-group">
                                            <label asp-for="Name" class="control-label"></label>
                                            <input asp-for="Name" class="form-control" readonly />
                       
                                        </div>
                                        <br class="p-1"/>
                                        

                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" readonly />
                    </div>
                    <br class="p-1"/>
                   
                    <div class="form-group">
                        <form asp-action="Delete" method="Post">
                            <input type="hidden" asp-for="Id"/>
                            <input type="submit" value="Confirm Delete" class="btn btn-outline-danger float-right" asp-action="Delete"
                                   asp-route-id="@Model.Id"/>
                            <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                        </form>

                        
                    </div>
                    
               
            </div>
        </div>
    </div>
</div>

@section Scripts{ 
    <script>
        $(document).ready(function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $("#ProfilePictureURL").val();
        })
        
    </script>
}